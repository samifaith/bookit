<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="Platform for Lovers of Literature. Discover Your Next Adventure.">
    <meta name="keywords" content="playlist, books, curated">
    <title>BookIt! Sign Up-Interests</title>
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="fave.css">
    <link href="https://fonts.googleapis.com/css?family=Lato|Playfair+Display|Playfair+Display+SC&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
  </head>
  <body>
    <header>
      <section id="logo">
        <a href="/"><img src="images/booksWhiote.png" alt="BookIt! Logo"></a>
      </section>
      <h1>Favorite Books</h1>
      <section id="dropdown">
        <div class="">
          <a href="/profile"><input type="button" name="" value="PROFILE"></a>
        </div>
      </section>
    </header>
    <ul id="hero">
      <% for (let i = 0; i < favorites.length; i++) { %>
        <li id="eachBook">
          <img src="<%= favorites[i].bookImg %>" alt="">
          <span id="title"><%= favorites[i].bookTitle %></span>
					<span id="author"><%=favorites[i].bookAuthor %></span>
          <span class="hide"><%=favorites[i]._id %></span>
          <span><i class="fa far fa-times-circle" aria-hidden="true"></i></span>
        </li>
      <% } %>
    </ul>
  </body>
  <script type="text/javascript" src="fave.js"></script>
</html>
